{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/@types",
    "declarationMap": true,
    "module": "NodeNext",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules"]
}
