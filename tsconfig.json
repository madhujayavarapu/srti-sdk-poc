{
  "compilerOptions": {
    "sourceMap": true,
    "module": "NodeNext",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
